<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_test"
    tools:context=".Menu.Navbar.Kontak">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/logo2"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

    <TextView
        android:id="@+id/kontak"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Kontak"
        android:textColor="@color/main"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl1"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/kontak"
        app:layout_constraintBottom_toTopOf="@+id/navbar_kontak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvKontak"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kontak"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tvAlamat"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKontak"
                android:justificationMode="inter_word"
                android:paddingEnd="20dp"
                android:text="Alamat : Jl. Kaharuddin Nasution 341 Kel. Air Dingin, Kec. Bukit Raya Pekanbaru, Riau, Indonesia
28284"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tvTelp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlamat"
                android:autoLink="phone"
                android:text="Nomor Telp : (0761) 674206"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:autoLink="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTelp"
                android:text="Email : bsip.riau@pertanian.go.id"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvWeb"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:autoLink="web"
                android:text="Website : http://riau.bsip.pertanian.go.id/"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tvSosmed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/tvWeb"
                android:text="Media Sosial"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/sosmed"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSosmed"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/facebook"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/x"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/x" />

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/youtube"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/youtube" />

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/tiktok"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/tiktok" />

            </LinearLayout>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sosmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bsip"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar_kontak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/main"
        app:itemTextColor="@color/main"
        app:itemActiveIndicatorStyle="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navbar_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>